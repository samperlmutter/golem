{
    "type": "modal",
    "callback_id": "add_strike_modal",
    "title": {
        "type": "plain_text",
        "text": "Add a strike"
    },
    "submit": {
        "type": "plain_text",
        "text": "Submit"
    },
    "close": {
        "type": "plain_text",
        "text": "Cancel"
    },
    "blocks": [{
            "type": "input",
            "block_id": "add_strike_target_block",
            "element": {
                "type": "users_select",
                "placeholder": {
                    "type": "plain_text",
                    "text": "Select a brother"
                },
                "action_id": "add_strike_target"
            },
            "label": {
                "type": "plain_text",
                "text": "Select a brother"
            }
        },
        {
            "type": "input",
            "block_id": "add_strike_excusability_block",
            "element": {
                "type": "static_select",
                "placeholder": {
                    "type": "plain_text",
                    "text": "Excusability"
                },
                "action_id": "add_strike_excusability",
                "options": [{
                        "text": {
                            "type": "plain_text",
                            "text": "Excused"
                        },
                        "value": "excused"
                    },
                    {
                        "text": {
                            "type": "plain_text",
                            "text": "Unexcused"
                        },
                        "value": "unexcused"
                    }
                ]
            },
            "label": {
                "type": "plain_text",
                "text": "Select their excusability"
            }
        },
        {
            "type": "input",
            "block_id": "add_strike_offense_block",
            "element": {
                "type": "static_select",
                "placeholder": {
                    "type": "plain_text",
                    "text": "Offense"
                },
                "action_id": "add_strike_offense",
                "options": [{
                        "text": {
                            "type": "plain_text",
                            "text": "Tardy"
                        },
                        "value": "tardy"
                    },
                    {
                        "text": {
                            "type": "plain_text",
                            "text": "Absent"
                        },
                        "value": "absence"
                    }
                ]
            },
            "label": {
                "type": "plain_text",
                "text": "Select their offense"
            }
        },
        {
            "type": "input",
            "block_id": "add_strike_reason_block",
            "element": {
                "type": "plain_text_input",
                "multiline": true,
                "action_id": "add_strike_reason",
                "placeholder": {
                    "type": "plain_text",
                    "text": "Why are they getting a strike?"
                }
            },
            "label": {
                "type": "plain_text",
                "text": "Reason"
            }
        }
    ]
}
